import { VerticalBox } from "std-widgets.slint";

export component MainWindow inherits Window {
    title: "PSRX - PlayStation Emulator";
    width: 1024px;
    height: 768px;

    // Properties
    in-out property <image> framebuffer;
    in-out property <string> fps-text: "FPS: 0";
    in-out property <bool> running: false;

    VerticalBox {
        padding: 0px;

        // Emulator display
        Image {
            source: framebuffer;
            width: 100%;
            height: parent.height - 30px;
            image-fit: contain;
        }

        // Status bar
        Rectangle {
            height: 30px;
            background: #2c2c2c;

            HorizontalLayout {
                padding: 5px;

                Text {
                    text: fps-text;
                    color: #ffffff;
                    font-size: 14px;
                }

                Rectangle {
                    // Spacer
                }

                Text {
                    text: running ? "Running" : "Stopped";
                    color: running ? #00ff00 : #ff0000;
                    font-size: 14px;
                }
            }
        }
    }
}
